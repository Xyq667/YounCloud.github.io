    <script>
        (function() {
            "use strict";

            // ---------- ğŸ” å¯†ç éªŒè¯ ----------
            const PASSWORD = '114514667';  // é™æ€å¯†ç 
            const passwordProtection = document.getElementById('password-protection');
            const app = document.getElementById('app');
            const passwordInput = document.getElementById('password-input');
            const submitPassword = document.getElementById('submit-password');

            // æ£€æŸ¥æ˜¯å¦å·²è®¤è¯ï¼ˆsessionStorageï¼‰
            function checkAuthAndShow() {
                if (sessionStorage.getItem('youyun_auth') === 'true') {
                    passwordProtection.style.display = 'none';
                    app.style.display = 'block';
                    initializeApp(); // å¯åŠ¨æ¸¸äº‘æ ¸å¿ƒ
                } else {
                    passwordProtection.style.display = 'flex';
                    app.style.display = 'none';
                }
            }

            // éªŒè¯å¯†ç 
            function verifyPassword() {
                const pwd = passwordInput.value.trim();
                if (pwd === PASSWORD) {
                    sessionStorage.setItem('youyun_auth', 'true');
                    passwordProtection.style.display = 'none';
                    app.style.display = 'block';
                    initializeApp();
                } else {
                    alert('å¯†ç é”™è¯¯ï¼Œè¯·é‡æ–°è¾“å…¥ã€‚');
                    passwordInput.value = '';
                    passwordInput.focus();
                }
            }

            submitPassword.addEventListener('click', verifyPassword);
            passwordInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    verifyPassword();
                }
            });

            // ---------- ğŸŒ¥ï¸ æ¸¸äº‘ç½‘ç›˜ Â· GitHub æ ¸å¿ƒé©±åŠ¨ (ä¸åŸé€»è¾‘å®Œå…¨ä¸€è‡´) ----------
            const GITHUB_CONFIG_KEY = 'youyun_github_config';
            const STORAGE_PATH = 'files';  // ä»“åº“ä¸‹ files/ ç›®å½•

            // DOM å…ƒç´ ï¼ˆæ¸¸äº‘æ ¸å¿ƒï¼‰
            let configCard, uploadCard, fileListEl, repoOwnerInput, repoNameInput, tokenInput, saveConfigBtn;
            let uploadArea, fileInput, uploadBtn, backBtn;

            // GitHub é…ç½®çŠ¶æ€
            let githubConfig = {
                repoOwner: '',
                repoName: '',
                githubToken: ''
            };

            function initializeApp() {
                // é‡æ–°è·å–DOMå¼•ç”¨ï¼ˆç¡®ä¿åœ¨appæ˜¾ç¤ºåï¼‰
                configCard = document.getElementById('github-config-card');
                uploadCard = document.getElementById('upload-card');
                fileListEl = document.getElementById('file-list');
                repoOwnerInput = document.getElementById('repo-owner');
                repoNameInput = document.getElementById('repo-name');
                tokenInput = document.getElementById('github-token');
                saveConfigBtn = document.getElementById('save-config');
                uploadArea = document.getElementById('upload-area');
                fileInput = document.getElementById('file-input');
                uploadBtn = document.getElementById('upload-btn');
                backBtn = document.getElementById('back-to-cloud');

                // åˆå§‹åŒ–é…ç½®
                init();

                // å›åˆ°äº‘ç«¯æŒ‰é’®äº‹ä»¶
                if (backBtn) {
                    backBtn.addEventListener('click', function(e) {
                        e.preventDefault();
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                    });
                }

                // ä¿å­˜é…ç½®
                saveConfigBtn.addEventListener('click', saveConfiguration);

                // ä¸Šä¼ åŒºåŸŸäº¤äº’
                uploadArea.addEventListener('click', () => fileInput.click());

                uploadArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    uploadArea.classList.add('dragover');
                });
                uploadArea.addEventListener('dragleave', () => uploadArea.classList.remove('dragover'));
                uploadArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    uploadArea.classList.remove('dragover');
                    if (e.dataTransfer.files.length) handleFiles(e.dataTransfer.files);
                });

                fileInput.addEventListener('change', function() {
                    if (this.files.length) handleFiles(this.files);
                });

                // è„šæ³¨å¹´ä»½
                document.getElementById('dynamic-year').innerText = new Date().getFullYear() + ' Â© æ¸¸äº‘';
            }

            // ---------- ä»¥ä¸‹ä¸ºæ¸¸äº‘æ ¸å¿ƒå‡½æ•°ï¼Œä¸åŸç‰ˆå®Œå…¨ä¸€è‡´ ----------
            function init() {
                const stored = localStorage.getItem(GITHUB_CONFIG_KEY);
                if (stored) {
                    try {
                        githubConfig = JSON.parse(stored);
                        if (githubConfig.repoOwner && githubConfig.repoName && githubConfig.githubToken) {
                            repoOwnerInput.value = githubConfig.repoOwner || '';
                            repoNameInput.value = githubConfig.repoName || '';
                            tokenInput.value = githubConfig.githubToken || '';
                            configCard.style.display = 'none';
                            uploadCard.style.display = 'block';
                            loadFileList();
                            return;
                        }
                    } catch (e) {}
                }
                configCard.style.display = 'block';
                uploadCard.style.display = 'none';
                githubConfig = {
                    repoOwner: repoOwnerInput.value.trim(),
                    repoName: repoNameInput.value.trim(),
                    githubToken: ''
                };
            }

            function showConfigCard() {
                configCard.style.display = 'block';
                uploadCard.style.display = 'none';
                githubConfig = { repoOwner: repoOwnerInput.value.trim(), repoName: repoNameInput.value.trim(), githubToken: '' };
            }

            function saveConfiguration() {
                const owner = repoOwnerInput.value.trim();
                const repo = repoNameInput.value.trim();
                const token = tokenInput.value.trim();

                if (!owner || !repo || !token) {
                    alert('è¯·å®Œæ•´å¡«å†™ GitHub ç”¨æˆ·åã€ä»“åº“åå’Œä¸ªäººè®¿é—®ä»¤ç‰Œã€‚');
                    return;
                }

                githubConfig = { repoOwner: owner, repoName: repo, githubToken: token };
                localStorage.setItem(GITHUB_CONFIG_KEY, JSON.stringify(githubConfig));

                configCard.style.display = 'none';
                uploadCard.style.display = 'block';
                loadFileList();
            }

            function getHeaders() {
                return {
                    'Authorization': `token ${githubConfig.githubToken}`,
                    'Accept': 'application/vnd.github.v3+json',
                    'Content-Type': 'application/json'
                };
            }

            async function loadFileList() {
                if (!githubConfig.repoOwner || !githubConfig.repoName) return;

                try {
                    const url = `https://api.github.com/repos/${githubConfig.repoOwner}/${githubConfig.repoName}/contents/${STORAGE_PATH}`;
                    const response = await fetch(url, { headers: getHeaders() });

                    if (response.status === 404) {
                        renderFileList([]);
                        return;
                    }
                    if (!response.ok) {
                        throw new Error(`æ— æ³•è·å–æ–‡ä»¶åˆ—è¡¨ (${response.status})`);
                    }

                    const data = await response.json();
                    const files = Array.isArray(data) ? data.filter(item => item.type === 'file') : [];
                    renderFileList(files);
                } catch (error) {
                    console.error('åŠ è½½æ–‡ä»¶å¤±è´¥:', error);
                    renderFileList([]);
                    if (error.message.includes('401') || error.message.includes('403')) {
                        alert('ä»¤ç‰Œæ— æ•ˆæˆ–æƒé™ä¸è¶³ï¼Œè¯·é‡æ–°é…ç½®ã€‚');
                    }
                }
            }

            function renderFileList(files) {
                if (!files || files.length === 0) {
                    fileListEl.innerHTML = `
                        <li class="empty-state">
                            <i class="fas fa-cloud-upload-alt empty-icon"></i>
                            <p style="font-size: 18px; margin-bottom: 8px;">ğŸ“ ä»“åº“è¿˜æ²¡æœ‰æ–‡ä»¶</p>
                            <p style="color: #7999ae;">ä¸Šä¼ ç¬¬ä¸€ä¸ªæ–‡ä»¶ï¼Œå’Œæœ‹å‹åˆ†äº«</p>
                        </li>
                    `;
                    return;
                }

                let html = '';
                files.forEach(file => {
                    const iconClass = getFileIcon(file.name);
                    const sizeFormatted = formatFileSize(file.size);
                    html += `
                        <li class="file-item">
                            <div class="file-info">
                                <div class="file-icon"><i class="${iconClass}"></i></div>
                                <div class="file-details">
                                    <div class="file-name">${escapeHTML(file.name)}</div>
                                    <div class="file-meta">${sizeFormatted}</div>
                                </div>
                            </div>
                            <div class="file-actions">
                                <button class="download-btn" data-url="${file.download_url}" data-name="${escapeHTML(file.name)}">
                                    <i class="fas fa-download"></i> ä¸‹è½½
                                </button>
                                <button class="delete-btn" data-path="${file.path}" data-sha="${file.sha}" data-name="${escapeHTML(file.name)}">
                                    <i class="fas fa-trash-alt"></i> åˆ é™¤
                                </button>
                            </div>
                        </li>
                    `;
                });

                fileListEl.innerHTML = html;

                document.querySelectorAll('.download-btn').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        e.stopPropagation();
                        const url = btn.getAttribute('data-url');
                        if (url) window.open(url, '_blank');
                    });
                });

                document.querySelectorAll('.delete-btn').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        e.stopPropagation();
                        const path = btn.getAttribute('data-path');
                        const sha = btn.getAttribute('data-sha');
                        const name = btn.getAttribute('data-name');
                        deleteFile(path, sha, name);
                    });
                });
            }

            async function deleteFile(path, sha, fileName) {
                if (!confirm(`ç¡®å®šå°†ã€Œ${fileName}ã€ä»æ¸¸äº‘ä»“åº“æ°¸ä¹…åˆ é™¤å—ï¼Ÿ`)) return;

                try {
                    const url = `https://api.github.com/repos/${githubConfig.repoOwner}/${githubConfig.repoName}/contents/${path}`;
                    const response = await fetch(url, {
                        method: 'DELETE',
                        headers: getHeaders(),
                        body: JSON.stringify({
                            message: `[æ¸¸äº‘] åˆ é™¤æ–‡ä»¶ ${fileName}`,
                            sha: sha
                        })
                    });

                    if (!response.ok) throw new Error('åˆ é™¤å¤±è´¥');
                    alert(`âœ… æ–‡ä»¶ã€Œ${fileName}ã€å·²åˆ é™¤`);
                    loadFileList();
                } catch (error) {
                    console.error(error);
                    alert('åˆ é™¤å¤±è´¥: ' + (error.message || 'æœªçŸ¥é”™è¯¯'));
                }
            }

            async function uploadFilesToGitHub(filesToUpload) {
                if (!filesToUpload || filesToUpload.length === 0) return;

                uploadBtn.disabled = true;
                uploadBtn.innerHTML = '<i class="fas fa-spinner fa-pulse"></i> ä¸Šä¼ ä¸­...';

                let successCount = 0;
                for (let i = 0; i < filesToUpload.length; i++) {
                    try {
                        const file = filesToUpload[i];
                        await uploadSingleFile(file);
                        successCount++;
                    } catch (err) {
                        console.error(`ä¸Šä¼ å¤±è´¥: ${filesToUpload[i].name}`, err);
                        alert(`æ–‡ä»¶ ${filesToUpload[i].name} ä¸Šä¼ å¤±è´¥: ${err.message}`);
                    }
                }

                uploadBtn.disabled = false;
                uploadBtn.innerHTML = '<i class="fas fa-arrow-up"></i> ä¸Šä¼ åˆ°æ¸¸äº‘';

                if (successCount > 0) {
                    alert(`âœ¨ æˆåŠŸä¸Šä¼  ${successCount} ä¸ªæ–‡ä»¶åˆ°ä»“åº“`);
                    fileInput.value = '';
                    loadFileList();
                }
            }

            async function uploadSingleFile(file) {
                const MAX_SIZE = 100 * 1024 * 1024;
                if (file.size > MAX_SIZE) {
                    throw new Error(`æ–‡ä»¶å¤§å°è¶…è¿‡ 100MB é™åˆ¶`);
                }

                const base64 = await readFileAsBase64(file);
                const contentBase64 = base64.split(',')[1];
                const fileName = file.name;
                const apiUrl = `https://api.github.com/repos/${githubConfig.repoOwner}/${githubConfig.repoName}/contents/${STORAGE_PATH}/${fileName}`;

                let sha = null;
                try {
                    const existResp = await fetch(apiUrl, { headers: getHeaders() });
                    if (existResp.ok) {
                        const existData = await existResp.json();
                        sha = existData.sha;
                    }
                } catch (e) { }

                const body = {
                    message: sha ? `[æ¸¸äº‘] æ›´æ–° ${fileName}` : `[æ¸¸äº‘] æ–°å¢ ${fileName}`,
                    content: contentBase64
                };
                if (sha) body.sha = sha;

                const response = await fetch(apiUrl, {
                    method: 'PUT',
                    headers: getHeaders(),
                    body: JSON.stringify(body)
                });

                if (!response.ok) {
                    const err = await response.json().catch(() => ({}));
                    throw new Error(err.message || `HTTP ${response.status}`);
                }
                return await response.json();
            }

            function readFileAsBase64(file) {
                return new Promise((resolve, reject) => {
                    const reader = new FileReader();
                    reader.onload = e => resolve(e.target.result);
                    reader.onerror = e => reject(new Error('è¯»å–æ–‡ä»¶å¤±è´¥'));
                    reader.readAsDataURL(file);
                });
            }

            function getFileIcon(filename) {
                const ext = filename.split('.').pop().toLowerCase();
                const map = {
                    pdf: 'fa-file-pdf', doc: 'fa-file-word', docx: 'fa-file-word',
                    xls: 'fa-file-excel', xlsx: 'fa-file-excel', ppt: 'fa-file-powerpoint', pptx: 'fa-file-powerpoint',
                    zip: 'fa-file-archive', rar: 'fa-file-archive', '7z': 'fa-file-archive',
                    jpg: 'fa-file-image', jpeg: 'fa-file-image', png: 'fa-file-image', gif: 'fa-file-image', webp: 'fa-file-image',
                    mp3: 'fa-file-audio', wav: 'fa-file-audio', mp4: 'fa-file-video', avi: 'fa-file-video',
                    txt: 'fa-file-alt', js: 'fa-file-code', html: 'fa-file-code', css: 'fa-file-code', json: 'fa-file-code',
                    md: 'fa-file-alt', py: 'fa-file-code', java: 'fa-file-code', cpp: 'fa-file-code'
                };
                return `fas ${map[ext] || 'fa-file'}`;
            }

            function formatFileSize(bytes) {
                if (bytes === 0) return '0 B';
                const k = 1024;
                const units = ['B', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + units[i];
            }

            function escapeHTML(str) {
                return String(str).replace(/[&<>"]/g, function(m) {
                    if (m === '&') return '&amp;';
                    if (m === '<') return '&lt;';
                    if (m === '>') return '&gt;';
                    if (m === '"') return '&quot;';
                    return m;
                });
            }

            function handleFiles(selectedFiles) {
                const MAX_SIZE = 100 * 1024 * 1024;
                const valid = [];
                for (let f of selectedFiles) {
                    if (f.size > MAX_SIZE) {
                        alert(`ã€Œ${f.name}ã€å¤§å°ä¸º ${(f.size / (1024*1024)).toFixed(2)}MBï¼Œè¶…è¿‡ 100MB é™åˆ¶ã€‚`);
                    } else {
                        valid.push(f);
                    }
                }
                if (valid.length > 0) {
                    uploadBtn.disabled = false;
                    uploadBtn.onclick = function() {
                        uploadFilesToGitHub(valid);
                    };
                } else {
                    uploadBtn.disabled = true;
                    uploadBtn.onclick = null;
                }
            }

            // ---------- é¡µé¢åŠ è½½ï¼šå…ˆæ£€æŸ¥è®¤è¯ï¼Œå†å†³å®šæ˜¯å¦åˆå§‹åŒ– ----------
            checkAuthAndShow();
        })();
    </script>
</body>
</html>
